{
  "name": "social-adonis",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.ts",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "test-coverage": "c8 node ace test --check-coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#utils/*": "./app/utils/*.js",
    "#models/*": "./app/models/*.js",
    "#enums/*": "./app/enums/*.js",
    "#interfaces/*": "./app/interfaces/*.js",
    "#types/*": "./app/types/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#notifications/*": "./app/notifications/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@faker-js/faker": "^9.0.0",
    "@flydotio/dockerfile": "^0.5.9",
    "@japa/assert": "^3.0.0",
    "@japa/browser-client": "^2.0.3",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.6.5",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "c8": "^10.1.2",
    "eslint": "^8.57.0",
    "hot-hook": "^0.2.6",
    "husky": "^9.1.6",
    "pino-pretty": "^11.2.1",
    "playwright": "^1.47.1",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "ts-node": "^10.9.2",
    "typescript": "~5.4",
    "vite": "^5.3.1"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.3",
    "@adonisjs/bouncer": "^3.1.3",
    "@adonisjs/core": "^6.12.1",
    "@adonisjs/drive": "^3.2.0",
    "@adonisjs/inertia": "^1.1.0",
    "@adonisjs/lucid": "^21.1.0",
    "@adonisjs/mail": "^9.2.2",
    "@adonisjs/session": "^7.4.2",
    "@adonisjs/shield": "^8.1.1",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^3.0.0",
    "@aws-sdk/client-s3": "^3.686.0",
    "@aws-sdk/client-ses": "^3.699.0",
    "@aws-sdk/s3-request-presigner": "^3.686.0",
    "@inertiajs/react": "^1.2.0",
    "@izzyjs/route": "^1.2.0",
    "@osenco/adonisjs-notifications": "^0.0.3",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-hover-card": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@rlanz/sentry": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@vinejs/vine": "^2.1.0",
    "autoprefixer": "^10.4.19",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "date-fns": "^4.1.0",
    "edge.js": "^6.0.2",
    "lucide-react": "^0.400.0",
    "luxon": "^3.4.4",
    "pg": "^8.12.0",
    "postcss": "^8.4.39",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "hotHook": {
    "boundaries": [
      "./app/middleware/*.ts"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app",
    "ignorePatterns": [
      "database/migrations/**"
    ],
    "overrides": [
      {
        "files": [
          "tailwind.config.js"
        ],
        "rules": {
          "unicorn/prefer-module": "off"
        }
      },
      {
        "files": [
          "docker-entrypoint.js"
        ],
        "rules": {
          "unicorn/filename-case": "off"
        }
      }
    ]
  }
}
